<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GAMES</title>
    <!-- Link to Bootstrap CSS library -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Link to the main site CSS file, ensuring the latest version is loaded -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Link to additional project-specific CSS file, ensuring the latest version is loaded -->
    <link rel="stylesheet" href="~/Proyecto.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm" style="background: #007cb7;">
            <div class="container-fluid">
                <!-- Link to the home page with a styled brand name -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style=" color: #fff;">GAMES</a>
                <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <!-- Navigation link to home page -->
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </li>
                        <li class="nav-item">
                            <!-- Navigation link to the latest news page -->
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="LatestNews">TopNews</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Render the main body content of the page -->
            @RenderBody()
        </main>
    </div>

    <!-- Scripts to be included at the end of the body for better performance -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Optionally render additional scripts specific to the page -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
